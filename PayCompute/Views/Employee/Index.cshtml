@model IEnumerable<EmployeeIndexViewModel>

@{
    ViewData["Title"] = "Employee";

}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"> <a asp-controller="Home" asp-action="Index" >Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page" > Employee List</li>
                    </ol>

                </nav><br /><br />
                <div class="row">
                    <div class="col-md-12 table-responsive-md">
                      
                        <a class="btn btn-xs btn-outline-success float-md-right" asp-controller="Employee" asp-action="Create">New Employee </a>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>EmployeeNo.</th>
                                    <th>Photo</th>
                                    <th>Name</th>
                                    <th>Gender</th>
                                    <th>Designation</th>
                                    <th>City</th>
                                    <th>Joined</th>
                                    <th class="text-warning" >Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                          <a asp-controller="Employee" asp-action="Details" asp-route-Id="@item.Id" > @item.EmployeeNo </a>  
                                         </td>
                                        <td>
                                            <img src="@Url.Content(item.ImageUrl)" alt="image">
                                        </td>
                                        <td>@item.FullName</td>
                                        <td>@item.Gender</td>
                                        <td>@item.Designation</td>
                                        <td>@item.City</td>
                                        <td>@item.DateJoined.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <a class="text-primary" asp-controller="Employee" asp-action="Edit" asp-route-Id="@item.Id">
                                              <i class="fas fa-edit" ></i>  Edit
                                                </a>
                                            <a class="text-success" asp-controller="Employee" asp-action="Details" asp-route-Id="@item.Id">
                                             <i class="fas fa-bars"></i>   Details
                                            </a>
                                            <a class="text-danger" asp-controller="Employee" asp-action="Delete" asp-route-Id="@item.Id">
                                              <i class="fas fa-trash-alt"></i>  Delete
                                            </a>


                                        </td>



                                    </tr>

                                }


                            </tbody>

                        </table>

                    </div>


                </div>


            </div>

        </div>

    </div>




</div>